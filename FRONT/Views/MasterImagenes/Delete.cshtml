@model ECOMMERCE.CORE.EntityImagen
@{
    ViewBag.Title = "Editor Forma de Pago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>IMAGEN</h1>
            </div>

            @using (Html.BeginForm("Delete", "MasterImagenes", FormMethod.Post))
            {
                <div class="card-body text-left">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ididentifier_i)

                    <div class="form-group">
                        ¿Quieres borrar @Model.ididentifier_i @Model.path_nv de la base de datos?
                    </div>

                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterImagenes" asp-action="Index" asp-route-id="@Model.id_producto">Volver a Imagenes</a>
                    <input class="btn btn-primary"  type="submit" value="Borrar" />

                </div>

            }

            
            
        </div>
    </div>
</div>