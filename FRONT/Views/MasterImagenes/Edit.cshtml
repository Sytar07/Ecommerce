@model ECOMMERCE.CORE.EntityImagen
@{
    ViewBag.Title = "Editor usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>IMAGEN</h1>
            </div>

            @using (Html.BeginForm("Edit", "MasterImagenes", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="card-body text-left">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ididentifier_i)
                    @Html.HiddenFor(model => model.id_producto)
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.path_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.path_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.path_nv)
                        </div>
                        <img src="~/images/productos/@Model.path_nv" width="100%">

                        @Html.EditorFor(model=>model.imagen, new { htmlAttributes = new { @class = "form-control"}})
                      
                    </div>
                  
                    <div class="form-group">
                        @Html.LabelFor(model => model.tipo_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.tipo_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.tipo_nv)
                        </div>
                    </div>
                  

                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterImagenes" asp-action="Index" asp-route-id="@Model.id_producto">Volver a  Imagenes</a>
                    <input class="btn btn-primary"  type="submit" value="Guardar" />
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterImagenes" asp-action="Delete" asp-route-id="@Model.ididentifier_i">Borrar</a>
                </div>

            }

            
            
        </div>
    </div>
</div>
