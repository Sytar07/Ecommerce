@model List<ECOMMERCE.CORE.EntityImagen>
@{
    ViewBag.Title = "Imagenes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive">
    <a class="btn btn-primary" asp-area="" asp-controller="MasterImagenes" asp-action="Create" asp-route-id="@ViewBag.ID_PRODUCTO">Crear</a>
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Path</th>              
                <th>Tipo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Imagen in Model)
            {
                <tr>
                    <td>@Imagen.ididentifier_i</td>
                    <td>@Imagen.path_nv</td>
                    <td>@Imagen.tipo_nv</td>

                    <td class="text-center">
                        <a class="btn btn-primary" asp-area="" asp-controller="MasterImagenes" asp-action="Edit" asp-route-id="@Imagen.ididentifier_i">Ficha</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card-footer text-center">

        <a class="btn btn-primary" asp-area="" asp-controller="MasterProductos" asp-action="Edit" asp-route-id="@ViewBag.id_producto">Ficha Producto</a>

    </div>
</div>