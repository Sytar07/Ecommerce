@model ECOMMERCE.CORE.EntityProducto
@{
    ViewBag.Title = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card" style="background: transparent;">
            <div class="card-header text-center">
                <h1>@ViewData["Title"]</h1>
            </div>

            @using (Html.BeginForm("Edit","MasterProductos",FormMethod.Post))
            {
                <div class="card-body text-left">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ididentifier_i)
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombre_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.nombre_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.nombre_nv)
                        </div>
                    </div>
                  
                    <div class="form-group">
                        @Html.LabelFor(model => model.descripcion_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.descripcion_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.descripcion_nv)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.precio_f, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.precio_f, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.precio_f)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.stock_f, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.stock_f, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.stock_f)
                        </div>
                    </div>

                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterProductos" asp-action="Index">Volver a  Productos</a>
                    <input class="btn btn-primary"  type="submit" value="Guardar" />
                    

                    <a class="btn btn-primary" asp-area="" asp-controller="MasterProductos" asp-action="Delete" asp-route-id="@Model.ididentifier_i">Borrar</a>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterImagenes" asp-action="Index" asp-route-id="@Model.ididentifier_i">Ver Imagenes del producto</a>
                </div>
                

            }

            
            
        </div>
    </div>
</div>