@model ECOMMERCE.CORE.EntityTarjeta


@{
    ViewBag.Title = "Pago con tarjeta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card" style="background: transparent;">
            <div class="card-header text-center">
                <h1>@ViewData["Title"]</h1>
            </div>

            @using (Html.BeginForm("RealizarPago", "MasterPedido", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                
                @Html.HiddenFor(model => model.iddireccion)
                @Html.HiddenFor(model => model.iduser)
                

                <div class="form-group">
                    @Html.LabelFor(m => m.NombreTitular, new { @class = "col-md-10 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.NombreTitular, new { @class = "form-control", placeholder = "Nombre del titular" })
                        @Html.ValidationMessageFor(m => m.NombreTitular)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NumeroTarjeta, new { @class = "col-md-10 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.NumeroTarjeta, new { @class = "form-control", placeholder = "Número de tarjeta" })
                        @Html.ValidationMessageFor(m => m.NumeroTarjeta)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FechaVencimiento, new { @class = "col-md-10 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FechaVencimiento, new { @class = "form-control", placeholder = "Fecha de vencimiento" })
                        @Html.ValidationMessageFor(m => m.FechaVencimiento)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CVV, new { @class = "col-md-10 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.CVV, new { @class = "form-control", placeholder = "CVV" })
                        @Html.ValidationMessageFor(m => m.CVV)
                    </div>
                </div>
                <div class="card-footer text-center">

                    <input class="btn btn-primary" type="submit" value="Pagar" />

                </div>
               
            }




        </div>
    </div>
</div>

@section scripts{
    <script>
   

    </script>
}

          