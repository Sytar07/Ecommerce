@model ECOMMERCE.CORE.EntityDireccion
@{
    ViewBag.Title = "Editor usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>DIRECCIÓN</h1>
            </div>

            @using (Html.BeginForm("Edit","MasterDirecciones",FormMethod.Post))
            {
                <div class="card-body text-left">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ididentifier_i)
                    <div class="form-group">
                        @Html.LabelFor(model => model.direccion_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.direccion_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.direccion_nv)
                        </div>
                    </div>
                  
               
                    <div class="form-group">
                        @Html.LabelFor(model => model.numero_i, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.numero_i, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.numero_i)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ciudad_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.ciudad_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.ciudad_nv)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.pais_i, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.pais_i, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.pais_i)
                        </div>
                    </div>

                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterDirecciones" asp-action="Index" asp-route-id="@Model.user_i">Volver a  Imagenes</a>
                    <input class="btn btn-primary"  type="submit" value="Guardar" />
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterDirecciones" asp-action="Delete" asp-route-id="@Model.ididentifier_i">Borrar</a>
                </div>

            }

            
            
        </div>
    </div>
</div>