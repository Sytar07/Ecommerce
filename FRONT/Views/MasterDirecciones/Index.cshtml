@model List<ECOMMERCE.CORE.EntityDireccion>
@{
    ViewBag.Title = "Direcciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive">
    <a class="btn btn-primary" asp-area="" asp-controller="MasterDirecciones" asp-action="Create" asp-route-id="@ViewBag.id_user">Crear</a>
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Dirección</th>              
                <th>Numero</th>
                <th>Ciudad</th>
                <th>Pais</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Direccion in Model)
            {
                <tr>
                    <td>@Direccion.ididentifier_i</td>
                    <td>@Direccion.direccion_nv</td>
                    <td>@Direccion.numero_i</td>
                    <td>@Direccion.ciudad_nv</td>
                    <td>@Direccion.pais_i</td>
                    

                    <td class="text-center">
                        <a class="btn btn-primary" asp-area="" asp-controller="MasterDirecciones" asp-action="Edit" asp-route-id="@Direccion.ididentifier_i">Ficha</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card-footer text-center">

        <a class="btn btn-primary" asp-area="" asp-controller="MasterUsers" asp-action="Edit" asp-route-id="@ViewBag.id_user">Ficha Usuario</a>

    </div>
</div>