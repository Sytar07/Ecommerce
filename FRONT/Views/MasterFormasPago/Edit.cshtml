@model ECOMMERCE.CORE.EntityFormaPago
@{
    ViewBag.Title = "Editor Forma de Pago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>FORMA DE PAGO</h1>
            </div>

            @using (Html.BeginForm("Edit", "MasterFormasPago", FormMethod.Post))
            {
                <div class="card-body text-left">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ididentifier_i)
                    <div class="form-group">
                        @Html.LabelFor(model => model.name_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.name_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.name_nv)
                        </div>
                    </div>
                  
                 

                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterFormasPago" asp-action="Index">Volver a Usuarios</a>
                    <input class="btn btn-primary"  type="submit" value="Guardar" />
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterFormasPago" asp-action="Delete" asp-route-id="@Model.ididentifier_i">Borrar</a>
                </div>

            }

            
            
        </div>
    </div>
</div>