@model ECOMMERCE.CORE.EntityProducto
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>USUARIO</h1>
            </div>

            @using (Html.BeginForm("Delete", "MasterProducto", FormMethod.Post))
            {
                <div class="card-body text-left">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ididentifier_i)

                    <div class="form-group">
                        ¿Quieres borrar @Model.ididentifier_i @Model.nombre_nv de la base de datos?
                    </div>

                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterProducto" asp-action="Index">Back to Formas de Pago</a>
                    <input class="btn btn-primary"  type="submit" value="Delete" />
                    
                </div>

            }

            
            
        </div>
    </div>
</div>