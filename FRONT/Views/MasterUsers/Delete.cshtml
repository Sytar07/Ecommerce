@model ECOMMERCE.CORE.EntityUser
@{
    ViewBag.Title = "Borrar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card" style="background: transparent;">
            <div class="card-header text-center">
                <h1>@ViewData["Title"]</h1>
            </div>

            @using (Html.BeginForm("Delete", "MasterUsers", FormMethod.Post))
            {
                <div class="card-body text-left">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ididentifier_i)

                    <div class="form-group">
                        ¿Quieres borrar @Model.ididentifier_i @Model.name_nv de la base de datos?
                    </div>

                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterUsers" asp-action="Index">Volver a Users</a>
                    <input class="btn btn-primary"  type="submit" value="Borrar" />
                </div>

            }

            
            
        </div>
    </div>
</div>