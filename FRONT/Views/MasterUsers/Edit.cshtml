@model ECOMMERCE.CORE.EntityUser
@{
    ViewBag.Title = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card" style="background: transparent;">
            <div class="card-header text-center">
                <h1>@ViewData["Title"]</h1>
            </div>

            @using (Html.BeginForm("Edit","MasterUsers",FormMethod.Post))
            {
                <div class="card-body text-left">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.ididentifier_i)
                    <div class="form-group">
                        @Html.LabelFor(model => model.name_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.name_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.name_nv)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.email_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.email_nv, new { htmlAttributes = new { @class = "form-control", @type = "email"}})
                            @Html.ValidationMessageFor(model => model.email_nv)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.clave_nv, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.clave_nv, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.clave_nv)
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.rol_i, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model=>model.rol_i, new { htmlAttributes = new { @class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.rol_i)
                        </div>
                    </div>

                </div>

                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterUsers" asp-action="Index">Volver a Usuarios</a>
                    <input class="btn btn-primary"  type="submit" value="Guardar" />
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterUsers" asp-action="Delete" asp-route-id="@Model.ididentifier_i">Borrar</a>
                </div>
                <div class="card-footer text-center">
                    <a class="btn btn-primary" asp-area="" asp-controller="MasterDirecciones" asp-action="Index" asp-route-id="@Model.ididentifier_i">Ver Direcciones del Usuario</a>
                </div>
            }

            
            
        </div>
    </div>
</div>