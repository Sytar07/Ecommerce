@model List<ECOMMERCE.CORE.EntityCarrito>


@{
    ViewBag.Title = "";
    decimal total = 0;
}


<table class="table" id="carrito">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            total = total + (item.precio_f * @item.cantidad_i);
            <tr>
                <td>@item.nombre_nv</td>
                <td style="text-align: right;">@item.precio_f.ToString("C")</td>
                <td style="text-align: right;">@item.cantidad_i.ToString()</td>
                <td style="text-align: right;">@(item.precio_f * @item.cantidad_i).ToString("C")</td>
                <td>
                    <button title="Eliminar Producto" class="btn btn-success agregarcarrito flex-shrink-0 w-50" type="button" onclick="quitarcarrito(@item.idproducto);">
                        X 
                    </button>
                </td>
            </tr>
        }
    
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td style="text-align: right;"><strong>Total:</strong></td>
            <td style="text-align: right;"><strong>@total.ToString("C")</strong></td>
        </tr>
    </tfoot>
</table>
    <a class="btn btn-primary" asp-area="" asp-controller="MasterPedido" asp-action="Index">Ver Pedido</a>
              