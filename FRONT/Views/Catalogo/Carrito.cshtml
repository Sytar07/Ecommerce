@model List<ECOMMERCE.CORE.EntityCarrito>


@{
    ViewBag.Title = "";
    decimal total = 0;
}


<table class="table" id="carrito">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            total = total + (item.precio_f * @item.cantidad_i);
            <tr>
                <td>@item.nombre_nv</td>
                <td style="text-align: right;">@item.precio_f€</td>
                <td style="text-align: right;">@item.cantidad_i</td>
                <td style="text-align: right;">@(item.precio_f * @item.cantidad_i)€</td>
                <td>
                    <button class="btn btn-success agregarcarrito flex-shrink-0 w-50" type="button" onclick="quitarcarrito(@item.idproducto);">
                        Eliminar producto
                    </button>
                </td>
            </tr>
        }
    
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td style="text-align: right;"><strong>Total:</strong></td>
            <td style="text-align: right;"><strong>@total</strong></td>
        </tr>
    </tfoot>
</table>
              